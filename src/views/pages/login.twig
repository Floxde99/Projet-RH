{% extends "../layouts/base.twig" %}

{% block main %}
<div class="flex justify-center items-center h-full w-full p-4">
  <form method="POST" class="card bg-base-200 shadow-sm max-w-md mx-auto w-full">
    <div class="card-body">
      <h2 class="card-title text-center justify-center mb-6">Connexion</h2>
      
      <div class="form-control w-full">
        <label for="siret" class="label">
          <span class="label-text font-medium">SIRET</span>
        </label>
        <input type="text" id="siret" name="siret" class="input input-bordered w-full" required placeholder="14 chiffres" />
      </div>
      
      <div class="form-control w-full mt-2">
        <label for="password" class="label">
          <span class="label-text font-medium">Mot de passe</span>
        </label>
        <input type="password" name="password" id="password" class="input input-bordered w-full" required placeholder="Votre mot de passe" />
        <div class="label justify-end">
          <a href="#" class="label-text-alt link link-hover">Mot de passe oublié?</a>
        </div>
      </div>
      
      <div class="form-control mt-6">
        <button class="btn btn-primary w-full">Se connecter</button>
      </div>
      
      <div class="text-center mt-4">
        <span class="text-sm">Pas encore inscrit ?</span>
        <a href="/register" class="link link-hover text-sm ml-1">Créer un compte</a>
      </div>
    </div>
  </form>
</div>
{% endblock %}