<script>
  // Fonction de g√©ocodage
  async function geocodeAddress(address) {
    try {
      const response = await fetch(`https://api.maptiler.com/geocoding/${encodeURIComponent(address)}.json?key=yhVb4pKbizkKPSbF1Ohr`);
      const data = await response.json();
      
      if (data.features && data.features.length > 0) {
        const coordinates = data.features[0].center;
        return {
          success: true,
          longitude: coordinates[0],
          latitude: coordinates[1],
          displayName: data.features[0].place_name
        };
      } else {
        return {
          success: false,
          error: 'Adresse non trouv√©e'
        };
      }
    } catch (error) {
      return {
        success: false,
        error: 'Erreur lors de la g√©olocalisation'
      };
    }
  }

  // Gestion du formulaire d'ordinateur
  async function handleComputerForm(form) {
    const addressInput = form.querySelector('input[name="address"]');
    const latitudeInput = form.querySelector('input[name="latitude"]');
    const longitudeInput = form.querySelector('input[name="longitude"]');
    const submitBtn = form.querySelector('button[type="submit"]');
    const statusDiv = form.querySelector('.geocoding-status');
    
    // Si pas d'adresse, on laisse passer
    if (!addressInput.value.trim()) {
      return true;
    }
    
    // Emp√™cher la soumission pendant le g√©ocodage
    event.preventDefault();
    
    // Afficher le statut de chargement
    statusDiv.innerHTML = '<span class="geocoding-loading">üîÑ G√©olocalisation en cours...</span>';
    submitBtn.disabled = true;
    
    // G√©ocoder l'adresse
    const result = await geocodeAddress(addressInput.value);
    
    if (result.success) {
      latitudeInput.value = result.latitude;
      longitudeInput.value = result.longitude;
      statusDiv.innerHTML = `<span class="geocoding-success">‚úÖ Position trouv√©e: ${result.displayName}</span>`;
      
      // Soumettre le formulaire
      setTimeout(() => {
        form.submit();
      }, 1000);
    } else {
      statusDiv.innerHTML = `<span class="geocoding-error">‚ùå ${result.error}</span>`;
      submitBtn.disabled = false;
    }
    
    return false;
  }

  function switchTab(tab) {
    document.getElementById('employees-tab').classList.add('hidden');
    document.getElementById('computers-tab').classList.add('hidden');
    document.getElementById(tab + '-tab').classList.remove('hidden');
    
    // Update active tab
    const tabs = document.querySelectorAll('.tab');
    tabs.forEach(t => t.classList.remove('tab-active'));
    if (tab === 'employees') {
      tabs[0].classList.add('tab-active');
    } else {
      tabs[1].classList.add('tab-active');
    }
  }
  
  // V√©rifier l'onglet actif depuis l'URL lors du chargement initial
  document.addEventListener('DOMContentLoaded', function() {
    // R√©cup√©rer le param√®tre tab de l'URL
    const urlParams = new URLSearchParams(window.location.search);
    const activeTab = urlParams.get('tab');
    
    // Si le param√®tre existe, activer l'onglet correspondant
    if (activeTab === 'computers') {
      switchTab('computers');
    }
  });
  
  function confirmDelete(type, id) {
    if (confirm(`√ätes-vous s√ªr de vouloir supprimer cet √©l√©ment ?`)) {
      window.location.href = `/${type}/delete/${id}`;
    }
  }
  
  function unassignComputer(id) {
    if (confirm(`√ätes-vous s√ªr de vouloir d√©sassigner cet ordinateur ?`)) {
      window.location.href = `/computer/unassign/${id}`;
    }
  }
</script>
<script src="https://unpkg.com/maplibre-gl@3.6.2/dist/maplibre-gl.js"></script>
<script>
  // Variable globale pour suivre l'initialisation de la carte
  let mapInitialized = false;
  
  document.addEventListener('DOMContentLoaded', function() {
    // V√©rifier d'abord si nous sommes sur l'onglet des ordinateurs
    const urlParams = new URLSearchParams(window.location.search);
    const activeTab = urlParams.get('tab');
    
    if (activeTab === 'computers') {
      switchTab('computers');
      // Initialiser la carte avec un d√©lai pour s'assurer que l'√©l√©ment est visible
      setTimeout(initMap, 200);
    }
    
    // Fonction pour initialiser la carte
    function initMap() {
      console.log("Tentative d'initialisation de la carte...");
      
      // V√©rifier que la carte n'est pas d√©j√† initialis√©e
      if (mapInitialized) {
        console.log("Carte d√©j√† initialis√©e, annulation.");
        return;
      }
      
      // V√©rifier que l'√©l√©ment map est visible
      const mapElement = document.getElementById('map');
      if (!mapElement || mapElement.offsetParent === null) {
        console.log("√âl√©ment map non visible, annulation.");
        return;
      }
      
      try {
        console.log("Cr√©ation de la carte...");
        
        // Utiliser un style de carte plus simple sans terrain
        const map = new maplibregl.Map({
          container: 'map',
          style: 'https://api.maptiler.com/maps/hybrid/style.json?key=yhVb4pKbizkKPSbF1Ohr', // Style hybride satellite + routes
          center: [2.3488, 48.8534], // Paris par d√©faut
          zoom: 12,
          pitch: 0, // D√©sactiver l'inclinaison
          antialias: true,
          terrain: false // D√©sactiver explicitement le terrain
        });
        
        // Ajouter un gestionnaire d'erreurs
        map.on('error', function(e) {
          console.error('Erreur MapLibre:', e.error);
        });
        
        // Ne continuer qu'apr√®s le chargement complet de la carte
        map.on('load', function() {
          // Ajouter les contr√¥les de navigation
          map.addControl(new maplibregl.NavigationControl());
          
          // Cr√©er un objet bounds pour stocker les limites de tous les marqueurs
          const bounds = new maplibregl.LngLatBounds();
          let hasValidCoordinates = false;
          
          // Ajouter des marqueurs pour chaque ordinateur
          {% if computers %}
            {% for computer in computers %}
            (function() { // Cr√©er un nouveau scope pour chaque ordinateur
              let lng, lat;
              
              {% if computer.latitude and computer.longitude %}
                // Utiliser les vraies coordonn√©es
                lng = {{ computer.longitude }};
                lat = {{ computer.latitude }};
                console.log("Ajout d'un marqueur avec coordonn√©es:", lat, lng);
                // √âtendre les limites pour inclure ce point
                bounds.extend([lng, lat]);
                hasValidCoordinates = true;
              {% else %}
                // Coordonn√©es fictives pour les ordinateurs sans adresse
                lng = 2.3488 + (Math.random() - 0.5) * 0.05;
                lat = 48.8534 + (Math.random() - 0.5) * 0.05;
                // On n'√©tend pas les limites avec les points fictifs
              {% endif %}
              
              // Cr√©er un √©l√©ment HTML personnalis√© pour le marqueur
              const el = document.createElement('div');
              el.className = 'marker';
              
              // Ajouter un popup avec les informations de l'ordinateur
              const popup = new maplibregl.Popup({ offset: 25 })
                .setHTML(`
                  <h3 class="font-bold">Ordinateur</h3>
                  <p><strong>MAC:</strong> {{ computer.macAddress }}</p>
                  {% if computer.adress %}
                    <p><strong>Adresse:</strong> {{ computer.adress }}</p>
                  {% endif %}
                  {% if computer.latitude and computer.longitude %}
                    <p><strong>Coordonn√©es:</strong> ${lat.toFixed(5)}, ${lng.toFixed(5)}</p>
                  {% endif %}
                  {% if computer.employe %}
                    <p><strong>Utilis√© par:</strong> {{ computer.employe.firstName }} {{ computer.employe.lastname }}</p>
                  {% else %}
                    <p><strong>Statut:</strong> Non assign√©</p>
                  {% endif %}
                `);
              
              // Ajouter le marqueur √† la carte
              new maplibregl.Marker(el)
                .setLngLat([lng, lat])
                .setPopup(popup)
                .addTo(map);
            })(); // Fin de la fonction auto-invoqu√©e
            {% endfor %}
          {% endif %}
          
          // Ajuster la vue de la carte pour inclure tous les marqueurs avec coordonn√©es r√©elles
          if (hasValidCoordinates) {
            try {
              console.log("Ajustement des limites de la carte...");
              
              // Si un seul point, utiliser setCenter au lieu de fitBounds
              if (bounds._ne && bounds._sw && 
                  bounds._ne.lng === bounds._sw.lng && 
                  bounds._ne.lat === bounds._sw.lat) {
                console.log("Un seul point d√©tect√©, centrage direct");
                map.setCenter([bounds._ne.lng, bounds._ne.lat]);
                map.setZoom(15);
              } else {
                map.fitBounds(bounds, {
                  padding: 50,
                  maxZoom: 15,
                  duration: 1000
                });
              }
            } catch (error) {
              console.error("Erreur lors de l'ajustement des limites:", error);
              // Fallback: centrer sur Paris
              map.setCenter([2.3488, 48.8534]);
              map.setZoom(12);
            }
          } else {
            // S'il n'y a aucun point valide, centrer sur Paris
            console.log("Aucune coordonn√©e valide, centrage sur Paris");
            map.setCenter([2.3488, 48.8534]);
            map.setZoom(12);
          }
          
          mapInitialized = true;
          console.log("Carte initialis√©e avec succ√®s");
        });
      } catch (error) {
        console.error("Erreur lors de l'initialisation de la carte:", error);
      }
    }
    
    // Observer quand l'onglet des ordinateurs devient visible
    const originalSwitchTab = window.switchTab;
    window.switchTab = function(tab) {
      originalSwitchTab(tab);
      if (tab === 'computers') {
