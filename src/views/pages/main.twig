<script>
  document.addEventListener('DOMContentLoaded', function() {
    function initCalendar() {
      const calendarEl = document.getElementById('calendar');
      if (!calendarEl) return;
      
      const events = [
        // Anniversaires
        {% if employes %}
          {% for employe in employes %}
            {% if employe.birthDate %}
              {
                title: '🎂 {{ employe.firstName }} {{ employe.lastname }}',
                start: '2025-{{ employe.birthDate|date("m-d") }}',
                allDay: true,
                backgroundColor: '#3788d8',
                extendedProps: {
                  type: 'birthday',
                  employeId: {{ employe.id }}
                }
              },
            {% endif %}
          {% endfor %}
        {% endif %}
        
        // Tâches
        {% if tasks %}
          {% for task in tasks %}
            {
              title: '📋 {{ task.title }} ({{ task.employe.firstName }} {{ task.employe.lastname }})',
              start: '{{ task.dueDate|date("Y-m-d") }}',
              allDay: true,
              backgroundColor: {% if task.status == 'pending' %}'#f59e0b'{% elseif task.status == 'in-progress' %}'#3b82f6'{% elseif task.status == 'completed' %}'#10b981'{% else %}'#ef4444'{% endif %},
              extendedProps: {
                type: 'task',
                taskId: {{ task.id }},
                employeId: {{ task.employeId }},
                status: '{{ task.status }}'
              }
            }{{ not loop.last ? ',' : '' }}
          {% endfor %}
        {% endif %}
      ];
      
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        locale: 'fr',
        events: events,
        eventClick: function(info) {
          if (info.event.extendedProps.type === 'birthday') {
            // Ouvrir le modal d'édition d'employé pour les anniversaires
            const employeId = info.event.extendedProps.employeId;
            const modal = document.getElementById('edit-employee-modal-' + employeId);
            if (modal) {
              modal.checked = true;
            }
          } else if (info.event.extendedProps.type === 'task') {
            // Ouvrir le modal d'édition de tâche pour les tâches
            const taskId = info.event.extendedProps.taskId;
            const modal = document.getElementById('edit-task-modal-' + taskId);
            if (modal) {
              modal.checked = true;
            }
          }
        },
        dateClick: function(info) {
          // Ouvrir le modal d'ajout de tâche avec la date sélectionnée
          const dateInput = document.getElementById('add-task-date');
          const modal = document.getElementById('add-task-modal');
          if (dateInput && modal) {
            dateInput.value = info.dateStr;
            modal.checked = true;
          }
        }
      });
      
      calendar.render();
    }
    
    // Initialiser si on est sur l'onglet employés
    setTimeout(initCalendar, 500);
    
    // Reinitialiser lors du changement d'onglet
    if (window.switchTab) {
      const originalSwitchTab = window.switchTab;
      window.switchTab = function(tab) {
        originalSwitchTab(tab);
        if (tab === 'employes') {
          setTimeout(initCalendar, 500);
        }
      };
    }
  });
</script>
