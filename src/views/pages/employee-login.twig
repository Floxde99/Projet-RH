{% extends "../layouts/base.twig" %}

{% block main %}
<div class="flex justify-center items-center h-full w-full p-4">
  <form method="POST" class="card bg-base-200 shadow-sm max-w-md mx-auto w-full">
    <div class="card-body">
      <h2 class="card-title text-center justify-center mb-6">Connexion Employé</h2>
      
      <div class="form-control w-full">
        <label for="mail" class="label">
          <span class="label-text font-medium">Email</span>
        </label>
        <input type="email" id="mail" name="mail" class="input input-bordered w-full" required placeholder="Votre adresse email" />
      </div>
      
      <div class="form-control w-full mt-2">
        <label for="password" class="label">
          <span class="label-text font-medium">Mot de passe</span>
        </label>
        <input type="password" name="password" id="password" class="input input-bordered w-full" required placeholder="Votre mot de passe" />
        <div class="label justify-end">
          <a href="#" class="label-text-alt link link-hover">Mot de passe oublié?</a>
        </div>
      </div>
      
      {% if error %}
        <div class="alert alert-error mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span>{{ error.message }}</span>
        </div>
      {% endif %}
      
      <div class="form-control mt-6">
        <button class="btn btn-primary w-full">Se connecter</button>
      </div>
      
      <!-- Lien vers la connexion RH -->
      <div class="divider my-4">ou</div>
      
      <div class="text-center">
        <span class="text-sm">Vous êtes un responsable RH ?</span>
        <a href="/login" class="link link-hover text-sm ml-1">Connexion RH</a>
      </div>
    </div>
  </form>
</div>
{% endblock %}