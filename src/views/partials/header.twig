<header class="navbar bg-base-200 shadow-sm">
  <div class="container mx-auto">
    <div class="navbar-start">
      <a href="/" class="btn btn-ghost text-xl">MonoblocEPT RH</a>
    </div>
    
    <div class="navbar-end flex gap-2">
      <!-- Bouton de bascule du thème -->
      <button onclick="toggleTheme()" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="theme-light hidden">
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="theme-dark hidden">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
      
      {% if user %}
        <a href="/logout" class="btn btn-error btn-sm hover:btn-error hover:brightness-90 transition-all flex items-center gap-1 px-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Déconnexion
        </a>
        
      {% else %}
        <a href="/login" class="btn btn-ghost btn-sm">Connexion</a>
        <a href="/register" class="btn btn-primary btn-sm ml-2">Inscription</a>
      {% endif %}
    </div>
  </div>
</header>

<script>
  function updateThemeIcon() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    document.querySelector('.theme-light').classList.toggle('hidden', currentTheme !== 'winter');
    document.querySelector('.theme-dark').classList.toggle('hidden', currentTheme !== 'night');
  }
  document.addEventListener('DOMContentLoaded', updateThemeIcon);
</script>